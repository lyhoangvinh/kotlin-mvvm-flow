<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dto"
            type="com.vinh.domain.entities.avgle.Favorite" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@drawable/divider_small"
            app:layout_constraintBottom_toTopOf="@id/imv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:loadImageNotFit="@{dto.previewUrl}"
            tools:src="@drawable/poster_show_not_available" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@drawable/divider_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imv" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_hd_100"
            android:visibility="@{dto.hd ? View.VISIBLE : View.GONE, default = gone}"
            app:layout_constraintBottom_toBottomOf="@id/imv"
            app:layout_constraintEnd_toEndOf="@id/imv"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_8dp"
            android:singleLine="true"
            android:text="@{dto.title}"
            android:textSize="@dimen/text_headline"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/like"
            app:layout_constraintTop_toBottomOf="@id/imv"
            tools:text="性慾まみれの三十路F乳人妻 淺宮ちなつ" />

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_8dp"
            android:text="@{String.format(@string/like_number, dto.likes)}"
            android:textColor="@color/colorTextHint"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="Like: 123" />

        <TextView
            android:id="@+id/dislike"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_8dp"
            android:text="@{String.format(@string/dislike_number, dto.dislikes)}"
            android:textColor="@color/colorTextHint"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/like"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="Dislike: 123" />

        <TextView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_8dp"
            android:text="@{String.format(@string/view_number, dto.viewNumber)}"
            android:textColor="@color/colorTextHint"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/dislike"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="View: 123" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:layout_marginTop="@dimen/padding_8dp"
            android:layout_marginBottom="@dimen/padding_8dp"
            android:background="@drawable/divider_normal"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_8dp"
            android:background="@drawable/divider_normal"
            app:layout_constraintTop_toBottomOf="@+id/line3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>